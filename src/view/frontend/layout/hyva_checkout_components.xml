<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.payment.methods">
            <block name="checkout.payment.method.twint_regular"
                   as="twint_regular"
                   template="Hyva_TwintPayment::qr-code.phtml">
                <arguments>
                    <argument name="metadata" xsi:type="array">
                        <item name="subtitle" xsi:type="string" translate="true">Payment method offered by TWINT</item>
                        <item name="icon" xsi:type="array">
                            <item name="src" xsi:type="string">Twint_Magento::images/twint.svg</item>
                            <!-- optional attributes, specify as needed -->
                            <item name="attributes" xsi:type="array">
                                <item name="width" xsi:type="number">100</item>
                                <item name="loading" xsi:type="string">lazy</item>
                                <item name="alt" xsi:type="string" translate="true">TWINT icon</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
