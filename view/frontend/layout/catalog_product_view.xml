<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="hyva_modal"/>

    <body>
        <!-- Product Detail Page -->
        <referenceBlock name="product.info.addtocart">
            <block name="product.info.addtocart.twint" template="Twint_MagentoHyva::checkout/express-checkout/product-detail-page.phtml">
                <arguments>
                    <argument name="magewire" xsi:type="object">Twint\MagentoHyva\Magewire\Payment\Method\ExpressButton</argument>
                </arguments>
                <block name="product.info.addtocart.twint.loading" as="loading" template="Hyva_Theme::ui/loading.phtml"/>
            </block>
        </referenceBlock>
    </body>
</page>
