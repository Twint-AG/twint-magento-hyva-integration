<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="twint_modal"/>

    <body>
        <referenceContainer name="cart-drawer.bottom">
            <block name="cart-drawer.bottom.express-button-wrapper"
                   template="Twint_MagentoHyva::checkout/express-checkout/cart-drawer.phtml">
                <block name="cart-drawer.bottom.express-button" as="express-button" template="Twint_MagentoHyva::checkout/express-button.phtml">
                    <arguments>
                        <argument name="magewire" xsi:type="array">
                            <item name="type" xsi:type="object">Twint\MagentoHyva\Magewire\Payment\Method\ExpressButton</item>
                            <item name="shouldDisplayLabel" xsi:type="boolean">false</item>
                        </argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
