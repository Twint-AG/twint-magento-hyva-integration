<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="hyva_modal"/>

    <head>
        <css src="Twint_MagentoHyva::css/twint_override.css"/>
        <script src="Twint_MagentoHyva::js/qrcode.min.js" />
    </head>

    <body>
        <!-- Cart Flyout -->
        <referenceContainer name="cart-drawer.bottom">
            <block name="cart-drawer.bottom.express-button-wrapper" template="Twint_MagentoHyva::checkout/express-checkout/mini-cart.phtml">
                <arguments>
                    <argument name="magewire" xsi:type="object">Twint\MagentoHyva\Magewire\Payment\Method\ExpressButtonCartFlyout</argument>
                </arguments>
            </block>
        </referenceContainer>

        <!-- Loader -->
        <referenceContainer name="before.body.end">
            <block name="twint.hyva.loading" after="-" template="Twint_MagentoHyva::loading.phtml" />
            <block name="twint.hyva.modal" after="-" template="Twint_MagentoHyva::checkout/modal.phtml" />
        </referenceContainer>
    </body>
</page>
