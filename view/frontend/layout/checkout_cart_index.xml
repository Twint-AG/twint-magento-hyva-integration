<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="hyva_modal"/>

    <body>
        <!-- Cart Page -->
        <referenceContainer name="cart.summary">
            <block after='-' name="checkout.cart.methods.twint" template="Twint_MagentoHyva::checkout/express-checkout/cart.phtml">
                <arguments>
                    <argument name="magewire" xsi:type="object">Twint\MagentoHyva\Magewire\Payment\Method\ExpressButtonCart</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
